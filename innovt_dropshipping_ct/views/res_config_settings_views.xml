<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="idct_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">innovt.dropshipping.ct.res.config.settings</field>
            <field name="model">res.config.settings</field>
            <!-- field name="priority" eval="101"/-->
            <field name="inherit_id" ref="website.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                 <xpath expr="//div[@data-key='website']" position="inside">
                    <div id="ct-mayorista">
                        <h2>CT Mayorista</h2>
                        
                        <div class='row mt16 o_settings_container'>
                            <div class="col-6 col-lg-6 o_setting_box">
                                <div class='o_setting_right_pane'>                                    
                                    <div class="text-muted">API</div> 
                                    <field name="ct_api_url"/>
                                    <div class="text-muted">correo</div> 
                                    <field name="ct_api_email"/>
                                    <div class="text-muted">Usuario</div>                                    
                                    <field name="ct_api_user"/>
                                    <div class="text-muted">RFC</div> 
                                    <field name="ct_api_rfc"/>
                                    <div class="text-muted">Almacenes</div> 
                                    <field name="ct_warehouses"/>
                                </div>                            
                            </div>
                       
                            <div class="col-6 col-lg-6 o_setting_box">
                                <div class='o_setting_right_pane'>
                                    <div class="text-muted">FTP</div> 
                                    <field name="ct_ftp_host"/>
                                    <div class="text-muted">Usuario</div>                                    
                                    <field name="ct_ftp_user"/>
                                    <div class="text-muted">Contrase√±a</div> 
                                    <field name="ct_ftp_password" password="True"/>
                                </div>                            
                            </div>

                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>