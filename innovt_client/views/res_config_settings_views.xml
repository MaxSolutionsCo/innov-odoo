<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data>
        <record id="iuv_it_innovt_client_res_config_settings_view_form" model="ir.ui.view">
            <field name="name">innovt.client.res.config.settings.view.form.inherit.base.setup</field>
            <field name="model">res.config.settings</field>
            <field name="priority" eval="101"/>
            <field name="inherit_id" ref="base.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('settings')]" position="inside">

                    <div class="app_settings_block"
                         data-string="Max Solutions Co"
                         string="Max Solutions Co"
                         data-key="max_solutions_co_settings">
                        <div id="max_solutions_co">
                            <h2>API</h2>
                            <div class="row mt16 o_settings_container">
                                <div class="col-xs-12 col-md-6 o_setting_box">
                                    <div class="o_setting_right_pane">
                                        <div class="content-group">
                                            <div class="mt16">
                                                <label for="paperformat_id" string="Client id"
                                                       class="col-xs-3 col-md-3 o_light_label"/>
                                                <field name="msc_api_client_id" class="oe_inline"/>
                                            </div>
                                            <div class="mt16">
                                                <label for="external_report_layout" string="Client secret"
                                                       class="col-xs-3 col-md-3 o_light_label"/>
                                                <field name="msc_api_client_secret" class="oe_inline"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="col-xs-12 col-md-6 o_setting_box">
                                    <div class="o_setting_right_pane">
                                        <div class="content-group">
                                            <label for="zone_danger" string="Zone danger"/>
                                            <div class="text-muted">
                                                If is checked use Sandbox API, when is unchecked Live API.
                                            </div>
                                            <div class="mt16">
                                                <label for="external_report_layout" string="Sandbox"
                                                       class="col-xs-3 col-md-3 o_light_label"/>
                                                <field name="msc_api_mode" class="oe_inline"/>

                                            </div>
                                        </div>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>

                </xpath>
            </field>
        </record>
    </data>
</odoo>